<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CppGallery.Pages.WinRT.WindowsStorageStreams.ByteOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CppGallery.Pages.WinRT.WindowsStorageStreams"
    xmlns:controls="using:CppGallery.Pages.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer >
        <controls:OuterPanel HeaderType="WinRT" >
            <controls:SymbolBlockPanel Symbol="WinRTField" >
                <controls:ItemGrid Title="LittleEndian" Sentence="リトルエンディアン" Value="0" />
                <controls:ItemGrid Title="BigEndian" Sentence="ビッグエンディアン" Value="1" />
            </controls:SymbolBlockPanel>

            <controls:LinkButtons MSURL="https://learn.microsoft.com/ja-jp/uwp/api/windows.storage.streams.byteorder?view=winrt-22621" />
        </controls:OuterPanel>
    </ScrollViewer>
</Page>
