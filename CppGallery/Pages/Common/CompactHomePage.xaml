                </StackPanel>

                <StackPanel x:Name="CLibraryBlock" Spacing="0">
                    <TextBlock Text="C ライブラリ"/>
                </StackPanel>

                <StackPanel x:Name="WindowsLibraryBlock" Spacing="0">
