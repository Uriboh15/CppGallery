<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CppGallery.Pages.Columns.Column22.Column22Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CppGallery.Pages.Columns.Column22"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer x:Name="OuterContent" RequestedTheme="Light">
        <StackPanel Spacing="40" Padding="40" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Spacing="8">
                <TextBlock Text="タイトルバーの背景" FontSize="20" />
                <TextBlock x:Name="ModeText" Loaded="ModeText_Loaded" />
                <Button x:Name="ChangeButton" Content="変更" Width="65" Click="ChangeButton_Click" />
            </StackPanel>
            <StackPanel Spacing="8">
                <TextBlock Text="テーマ" FontSize="20" />
                <ToggleSwitch x:Name="ThemeSwitch" OnContent="ダーク" OffContent="ライト" Toggled="ThemeSwitch_Toggled" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
    
</Window>
