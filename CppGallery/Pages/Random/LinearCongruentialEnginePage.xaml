                <local:ItemGrid Title="minstd_rand" Sentence="minstd_rand0 を改良したエンジン" Value="linear_congruential_engine&lt;unsigned int, 48271, 0, 2147483647>"/>
                <local:ItemGrid Title="result_type" Sentence="乱数の型" Value="unsigned int"/>
            </local:BlockPanel>

            <local:BlockPanel Header="Operator">
                <local:FunctionExpander x:Name="OpeKAKKOOut" Folder="random/linear_congruential_engine/operatorKAKKO" AutoFunc="False" ConsoleButtonVisibility="Collapsed" Icon="Operator" >
                    <local:FunctionExpander.Info>
                        <InfoBar Style="{StaticResource VisualCppX64OnlyNow}" />
                    </local:FunctionExpander.Info>
                    <local:ControlGrid Message="乱数を生成" Loaded="OpeKAKKOOut_Loaded">
                        <Button x:Name="OpeKAKKOButton" Content="生成" Click="OpeKAKKOButton_Click" Width="65"/>
